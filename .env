# Homelab Configuration Template
# Copy this to .env and customize for your environment

# Domain Configuration
HOMELAB_DOMAIN=homelab.local
HOMELAB_EMAIL=admin@homelab.local

# Data Storage Paths
# Ubuntu/WSL2: /srv/homelab
# macOS: /Users/yourusername/homelab-data
HOMELAB_DATA_ROOT=/Users/owenanderson/homelab-data

# Network Configuration
HOMELAB_NETWORK=homelab
DOCKER_SUBNET=172.20.0.0/16

# Traefik Configuration
TRAEFIK_API_DASHBOARD=true
TRAEFIK_LOG_LEVEL=INFO
ACME_EMAIL=${HOMELAB_EMAIL}

# Monitoring
GRAFANA_ADMIN_PASSWORD=changeme
PROMETHEUS_RETENTION=30d

# Portainer
PORTAINER_ADMIN_PASSWORD=changeme

# Nextcloud Configuration
NEXTCLOUD_ADMIN_USER=admin
NEXTCLOUD_ADMIN_PASSWORD=homelab123
NEXTCLOUD_DB_PASSWORD=nextcloud123
NEXTCLOUD_DB_ROOT_PASSWORD=root123

# Timezone
TZ=America/New_York

# Optional: External Access
# CLOUDFLARE_EMAIL=your@email.com
# CLOUDFLARE_API_TOKEN=your_token_here

# Optional: VPN Configuration
# WIREGUARD_PEERS=5
# WIREGUARD_SERVERURL=your.domain.com
