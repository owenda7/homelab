# Homelab Configuration Template
# Copy this to .env and customize for your environment

# Domain Configuration
HOMELAB_DOMAIN=homelab.local
HOMELAB_EMAIL=admin@example.com

# Data Storage Paths
# Ubuntu/WSL2: /srv/homelab
# macOS: /Users/yourusername/homelab-data
HOMELAB_DATA_ROOT=/path/to/homelab/data

# Network Configuration
HOMELAB_NETWORK=homelab
DOCKER_SUBNET=172.20.0.0/16

# Traefik Configuration
TRAEFIK_API_DASHBOARD=true
TRAEFIK_LOG_LEVEL=INFO
ACME_EMAIL=${HOMELAB_EMAIL}


# Portainer
PORTAINER_ADMIN_PASSWORD=changeme

# Nextcloud Configuration
NEXTCLOUD_ADMIN_USER=admin
NEXTCLOUD_ADMIN_PASSWORD=changeme
NEXTCLOUD_DB_PASSWORD=changeme
NEXTCLOUD_DB_ROOT_PASSWORD=changeme

# Timezone
TZ=America/New_York

# Pi-hole Configuration
PIHOLE_PASSWORD=changeme
PIHOLE_DNS_1=8.8.8.8
PIHOLE_DNS_2=8.8.4.4
PIHOLE_LOCAL_IP=172.20.0.100

# Optional: External Access
# CLOUDFLARE_EMAIL=your@email.com
# CLOUDFLARE_API_TOKEN=your_token_here

# Optional: VPN Configuration
# WIREGUARD_PEERS=5
# WIREGUARD_SERVERURL=your.domain.com
